<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearLayout"
    android:padding="12dp"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/ImageView"
        android:src="@drawable/chobslobsterbar"
        android:scaleType="centerCrop"
        android:layout_width="match_parent"
        android:layout_height="150dp" />

    <LinearLayout
        android:layout_margin="12dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/Heading"
            android:text="Chops Lobster Bar"
            android:textSize="22dp"
            android:maxLines="1"
            android:textStyle="bold"
            android:textAppearance="?android:textAppearanceLarge"
            android:textColor="@android:color/black"
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/Icon"
            android:src="@drawable/baseline_favorite_border_black_24dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="30dp" />

    </LinearLayout>

    <TextView
        android:id="@+id/Description"
        android:text="Visit Chops Lobster Bar and you might see Larry David, Russel Crowe, Justin Bieber,..."
        android:lines="2"
        android:ellipsize="end"
        android:textAppearance="?android:textAppearanceMedium"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>